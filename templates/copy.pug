extends base

block content
	td(style='display: block;')
		table
			tr
				td
					p Hello #{name},
	td(style='display: block;')
		table
			tr
				td(style='display: block;')
					p Thank you for the email regarding your interest in speaking with me about software development work. I'm currently in the market for a job and am interested in speaking to recruiters. If this is you, trust that I'll be in touch with you soon. Best regards!

					p(style="margin-bottom: 0;") Here is the information you provided me:
				td(style="display: block; font-size: .8em;")
					p(style="margin-bottom: 0; margin-top: 0;") Name: #{name}
					p(style="margin-bottom: 0; margin-top: 0;") Email: #{email}
					p(style="margin-bottom: 0; margin-top: 0;") Phone: #{phone}
					p(style="margin-bottom: 0; margin-top: 0;") Your email text:
					p(style="margin-bottom: 0; margin-top: 0;") #{desc}
	td(style='display: block;')
		table
			tr
				td(style="display: block; margin-top: 25px;")
					p(style="margin-bottom: 0; display: block;") Thank you,
					p(style="margin-top: 0; color: #00A2FF; font-style: bold;") John Pittenger
				td(style='display: block;')
					table
						tr
							td(style='display: block;')
								img(src='https://i.imgur.com/vQEOnhj.png' style='max-width: 80px;')
								p(style="margin-bottom: 0; margin-top: 0;") john@johnpittenger.dev